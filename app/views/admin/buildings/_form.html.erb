<div id="form-id">
  <div class="form-header">
    <h1 class="styled-header"><%= title %></h1>
  </div>

  <%= semantic_form_for(resource, url: url) do |f| %>
    <div class="form-fields">
      <%= f.semantic_errors %>
      <%= f.inputs do %>
        <%= f.input :property_name %>
        <%= f.input :description %>
        <%= f.input :street_address %>
        <%= f.input :zip_code, input_html: { class: "short-field"} %>
        <%= f.input :bbl %>
        <% if display_city_and_state %>
          <%= f.input :city %>
          <%= f.input :state %>
        <% end %>
        <%= f.input :bin %>
      <% end %>
      <%= f.actions do %>
        <% f.action :submit, label: action_label, button_html: { class: "btn-save" } %>
      <% end %>
    </div>
  <% end %>
</div>
